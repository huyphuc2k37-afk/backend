// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Users ───────────────────────────────────────
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  image         String?
  role          String    @default("reader") // reader | author | admin
  bio           String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  stories       Story[]
  bookmarks     Bookmark[]
  readHistory   ReadHistory[]
  comments      Comment[]
  deposits      Deposit[]
  purchases     ChapterPurchase[]
  withdrawals   Withdrawal[]
  coinBalance   Int       @default(0) // xu hiện tại
}

// ─── Deposits (Nạp xu) ──────────────────────────
model Deposit {
  id            String    @id @default(cuid())
  amount        Int       // VNĐ
  coins         Int       // xu nhận được (bao gồm bonus)
  method        String    // "zalopay" | "agribank"
  status        String    @default("pending") // pending | approved | rejected
  transferNote  String?   // nội dung chuyển khoản
  proofImage    String?   // ảnh minh chứng
  adminNote     String?   // ghi chú từ admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ─── Chapter Purchases (Mua chương) ─────────────
model ChapterPurchase {
  id            String    @id @default(cuid())
  coins         Int       // xu đã trả
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapterId     String
  chapter       Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
}

// ─── Withdrawals (Rút tiền tác giả) ─────────────
model Withdrawal {
  id              String    @id @default(cuid())
  amount          Int       // xu muốn rút
  moneyAmount     Int       // VNĐ tương ứng
  bankName        String
  bankAccount     String
  bankHolder      String
  status          String    @default("pending") // pending | approved | rejected
  adminNote       String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ─── Stories ─────────────────────────────────────
model Story {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  description     String    @db.Text
  coverImage      String?
  genre           String    // Tiên hiệp, Kiếm hiệp, etc.
  status          String    @default("ongoing") // ongoing | completed | paused
  tags            String?   // comma-separated
  views           Int       @default(0)
  likes           Int       @default(0)

  // ── Đề cương (Outline) ──
  theme           String?   // chủ đề
  expectedChapters Int?     // số chương dự kiến
  worldBuilding   String?   @db.Text // thiết lập thế giới
  characters      String?   @db.Text // JSON: [{name, role, description}]
  plotOutline     String?   @db.Text // JSON: [{order, title, summary}]

  // ── Cài đặt ──
  targetAudience  String?   // "13-17" | "18-25" | "25+"
  postSchedule    String?   // comma-separated days: "mon,wed,fri"
  isAdult         Boolean   @default(false)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  authorId        String
  author          User      @relation(fields: [authorId], references: [id])
  chapters        Chapter[]
  bookmarks       Bookmark[]
  readHistory     ReadHistory[]
  comments        Comment[]
}

// ─── Chapters ────────────────────────────────────
model Chapter {
  id            String    @id @default(cuid())
  title         String
  number        Int
  content       String    @db.Text // full text content
  wordCount     Int       @default(0)
  isLocked      Boolean   @default(false)
  price         Int       @default(0)     // VNĐ, 0 = free
  authorNote    String?   @db.Text // ghi chú tác giả cuối chương
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  readHistory   ReadHistory[]
  purchases     ChapterPurchase[]

  @@unique([storyId, number])
}

// ─── Bookmarks (Tủ truyện) ──────────────────────
model Bookmark {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
}

// ─── Reading History ────────────────────────────
model ReadHistory {
  id            String    @id @default(cuid())
  lastReadAt    DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  chapterId     String
  chapter       Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
}

// ─── Comments ───────────────────────────────────
model Comment {
  id            String    @id @default(cuid())
  content       String    @db.Text
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
}
