// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Users ───────────────────────────────────────
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String?   // hashed, null for Google OAuth users
  image         String?
  role          String    @default("reader") // reader | author | moderator | admin
  isSuperMod    Boolean   @default(false) // only admin-designated mods can edit stories
  provider      String    @default("google") // google | email
  emailVerified Boolean   @default(false)
  bio           String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  stories       Story[]
  bookmarks     Bookmark[]
  readHistory   ReadHistory[]
  comments      Comment[]
  deposits      Deposit[]
  purchases     ChapterPurchase[]
  withdrawals   Withdrawal[]
  notifications Notification[]
  followers     Follow[]  @relation("Following") // người theo dõi mình
  following     Follow[]  @relation("Follower")  // mình theo dõi ai
  coinBalance   Int       @default(0) // xu hiện tại
  storyLikes    StoryLike[]
  ratings       Rating[]
  commentLikes  CommentLike[]
  earnings      AuthorEarning[]
  announcements Announcement[] @relation("AnnouncementCreator")
  sentMessages     Message[]      @relation("MessageSender")
  conversations    ConversationParticipant[]

  // ── Referral (Mã mời tác giả) ──
  referralCode  String?   @unique // mã mời duy nhất, chỉ tác giả mới có
  referredById  String?   // ID tác giả đã giới thiệu user này
  referredBy    User?     @relation("Referrals", fields: [referredById], references: [id], onDelete: SetNull)
  referrals     User[]    @relation("Referrals") // những user mà mình giới thiệu
  referralEarnings ReferralEarning[]

  @@index([role])
  @@index([referredById])
}

// ─── Deposits (Nạp xu) ──────────────────────────
model Deposit {
  id            String    @id @default(cuid())
  amount        Int       // VNĐ
  coins         Int       // xu nhận được (bao gồm bonus)
  method        String    // "zalopay" | "agribank"
  status        String    @default("pending") // pending | approved | rejected
  transferCode  String    @unique // mã giao dịch duy nhất (VD: VS-AB12CD)
  transferNote  String?   // nội dung chuyển khoản
  proofImage    String?   // ảnh minh chứng
  adminNote     String?   // ghi chú từ admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// ─── Chapter Purchases (Mua chương) ─────────────
model ChapterPurchase {
  id            String    @id @default(cuid())
  coins         Int       // xu đã trả
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapterId     String
  chapter       Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
  @@index([userId])
}

// ─── Withdrawals (Rút tiền tác giả) ─────────────
model Withdrawal {
  id              String    @id @default(cuid())
  amount          Int       // xu muốn rút
  moneyAmount     Int       // VNĐ tương ứng
  bankName        String
  bankAccount     String
  bankHolder      String
  status          String    @default("pending") // pending | approved | rejected
  adminNote       String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// ─── Categories (Danh mục chính) ─────────────────
model Category {
  id              String    @id @default(cuid())
  name            String    // Tên hiển thị: "Tình cảm", "Huyền huyễn & Giả tưởng"
  slug            String    @unique // URL slug: "tinh-cam"
  description     String?   @db.Text
  seoTitle        String?   // SEO title cho trang thể loại
  seoDescription  String?   // SEO meta description
  icon            String?   // Icon name cho frontend
  color           String?   // Color hex cho frontend
  displayOrder    Int       @default(0) // Thứ tự hiển thị
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  stories         Story[]

  @@index([displayOrder])
}

// ─── Tags (Thẻ tag) ──────────────────────────────
model Tag {
  id              String    @id @default(cuid())
  name            String    // Tên hiển thị: "Ngôn tình", "1x1"
  slug            String    @unique // URL slug: "ngon-tinh"
  type            String    @default("genre") // genre | setting | tone | relation | ending | perspective | content | form
  createdAt       DateTime  @default(now())

  storyTags       StoryTag[]

  @@index([type])
}

// ─── Story Tags (junction) ───────────────────────
model StoryTag {
  id              String    @id @default(cuid())

  storyId         String
  story           Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  tagId           String
  tag             Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([storyId, tagId])
  @@index([tagId])
}

// ─── Redirects (301 cho URL cũ) ──────────────────
model Redirect {
  id              String    @id @default(cuid())
  oldPath         String    @unique // /the-loai/ngon-tinh
  newPath         String    // /the-loai/tinh-cam
  code            Int       @default(301) // HTTP status code
  createdAt       DateTime  @default(now())
}

// ─── Stories ─────────────────────────────────────
model Story {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  description     String    @db.Text
  coverImage      String?
  genre           String    // legacy: Tiên hiệp, Kiếm hiệp, etc. (kept for backward compat)
  status          String    @default("ongoing") // ongoing | completed | paused
  approvalStatus  String    @default("pending") // pending | approved | rejected
  rejectionReason String?   // lý do từ chối (nếu rejected)
  reviewedBy      String?   // ID moderator đã duyệt
  reviewedAt      DateTime? // thời gian duyệt
  coverApprovalStatus String @default("pending") // pending | approved | rejected
  coverRejectionReason String? // lý do từ chối ảnh bìa
  tags            String?   // legacy: comma-separated (migrated to StoryTag)
  views           Int       @default(0)
  likes           Int       @default(0)
  averageRating   Float     @default(0)
  ratingCount     Int       @default(0)

  // ── Category (new) ──
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])

  // ── Đề cương (Outline) ──
  theme           String?   // chủ đề
  expectedChapters Int?     // số chương dự kiến
  worldBuilding   String?   @db.Text // thiết lập thế giới
  characters      String?   @db.Text // JSON: [{name, role, description}]
  plotOutline     String?   @db.Text // JSON: [{order, title, summary}]

  // ── Cài đặt ──
  targetAudience  String?   // "13-17" | "18-25" | "25+"
  postSchedule    String?   // comma-separated days: "mon,wed,fri"
  isAdult         Boolean   @default(false)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  authorId        String
  author          User      @relation(fields: [authorId], references: [id])
  chapters        Chapter[]
  bookmarks       Bookmark[]
  readHistory     ReadHistory[]
  comments        Comment[]
  storyLikes      StoryLike[]
  ratings         Rating[]
  storyTags       StoryTag[]

  @@index([authorId])
  @@index([views])
  @@index([likes])
  @@index([genre])
  @@index([categoryId])
  @@index([updatedAt])
  @@index([status])
  @@index([approvalStatus])
}

// ─── Chapters ────────────────────────────────────
model Chapter {
  id              String    @id @default(cuid())
  title           String
  number          Int
  content         String    @db.Text // full text content
  wordCount       Int       @default(0)
  isLocked        Boolean   @default(false)
  price           Int       @default(0)     // VNĐ, 0 = free
  authorNote      String?   @db.Text // ghi chú tác giả cuối chương
  approvalStatus  String    @default("pending") // pending | approved | rejected
  rejectionReason String?
  reviewedBy      String?   // ID moderator
  reviewedAt      DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  readHistory   ReadHistory[]
  purchases     ChapterPurchase[]
  comments      Comment[]

  @@unique([storyId, number])
  @@index([approvalStatus])
}

// ─── Bookmarks (Tủ truyện) ──────────────────────
model Bookmark {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
  @@index([userId])
}

// ─── Reading History ────────────────────────────
model ReadHistory {
  id            String    @id @default(cuid())
  lastReadAt    DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  chapterId     String
  chapter       Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
}

// ─── Comments ───────────────────────────────────
model Comment {
  id            String    @id @default(cuid())
  content       String    @db.Text
  likes         Int       @default(0)
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId       String
  story         Story     @relation(fields: [storyId], references: [id], onDelete: Cascade)
  chapterId     String?
  chapter       Chapter?  @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  // Reply threading
  parentId      String?
  parent        Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies       Comment[] @relation("CommentReplies")

  commentLikes  CommentLike[]

  @@index([storyId, createdAt])
  @@index([chapterId, createdAt])
  @@index([parentId])
}

// ─── Comment Likes (Thích bình luận) ─────────────
model CommentLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
}

// ─── Notifications (Thông báo) ──────────────────
model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String   @db.Text
  type      String   @default("system") // system | wallet | admin
  link      String?
  isRead    Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, isRead])
}

// ─── Follows (Theo dõi tác giả) ─────────────────
model Follow {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  followerId  String   // người theo dõi
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followingId String   // tác giả được theo dõi
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followingId])
}

// ─── Story Likes (Thích truyện) ──────────────────
model StoryLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
}

// ─── Ratings (Đánh giá truyện) ───────────────────
model Rating {
  id        String   @id @default(cuid())
  score     Int      // 1-5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyId   String
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
}

// ─── Author Earnings (Doanh thu tác giả) ─────────
model AuthorEarning {
  id           String   @id @default(cuid())
  type         String   // "purchase" | "tip"
  amount       Int      // xu tác giả nhận được
  createdAt    DateTime @default(now())

  authorId     String
  author       User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  fromUserId   String?  // người mua / tặng
  chapterId    String?  // chương liên quan
  storyId      String?  // truyện liên quan
  storyTitle   String?  // cache tên truyện
  chapterTitle String?  // cache tên chương

  @@index([authorId, createdAt])
  @@index([authorId, type])
  @@index([storyId])
}

// ─── Platform Earnings (Doanh thu nền tảng) ─────
model PlatformEarning {
  id            String   @id @default(cuid())
  type          String   // "purchase" | "tip" | "gift"
  grossAmount   Int      // tổng xu user đã chi
  authorAmount  Int      // xu trả cho tác giả (net)
  platformAmount Int     // phần nền tảng (thực tế)
  taxAmount     Int      // thuế
  createdAt     DateTime @default(now())

  authorId      String?
  fromUserId    String?
  chapterId     String?
  storyId       String?
  storyTitle    String?
  chapterTitle  String?

  @@index([createdAt])
  @@index([type, createdAt])
  @@index([authorId, createdAt])
  @@index([storyId])
}

// ─── Referral Earnings (Hoa hồng giới thiệu) ────
model ReferralEarning {
  id              String   @id @default(cuid())
  type            String   // "deposit_commission" | "author_income_commission"
  amount          Int      // xu hoa hồng nhận được
  sourceAmount    Int      // xu gốc (deposit amount hoặc author income)
  rate            Float    // tỉ lệ hoa hồng (0.02 hoặc 0.01)
  createdAt       DateTime @default(now())

  referrerId      String   // tác giả nhận hoa hồng
  referrer        User     @relation(fields: [referrerId], references: [id], onDelete: Cascade)
  fromUserId      String?  // user được giới thiệu (người nạp xu hoặc tác giả có thu nhập)
  depositId       String?  // deposit liên quan (nếu deposit_commission)
  storyId         String?  // truyện liên quan (nếu author_income_commission)
  storyTitle      String?
  chapterId       String?
  chapterTitle    String?

  @@index([referrerId, createdAt])
  @@index([referrerId, type])
  @@index([fromUserId])
}

// ─── Announcements (marquee banner) ──────────────
model Announcement {
  id        String   @id @default(cuid())
  message   String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   String
  createdByUser User @relation("AnnouncementCreator", fields: [createdBy], references: [id])
}

// ─── Conversations (Hội thoại Admin/Mod ↔ Tác giả) ──
model Conversation {
  id        String   @id @default(cuid())
  subject   String?  // tiêu đề (VD: "Về truyện XYZ")
  storyId   String?  // liên kết đến truyện (nếu có)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ConversationParticipant[]
  messages     Message[]

  @@index([updatedAt])
  @@index([storyId])
}

model ConversationParticipant {
  id             String   @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastReadAt     DateTime @default(now())

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String   @id @default(cuid())
  content        String   @db.Text
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId       String
  sender         User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())

  @@index([conversationId, createdAt])
  @@index([senderId])
}

// ─── View Log (Batch view tracking) ──────────────
model ViewLog {
  id        String   @id @default(cuid())
  storyId   String
  ip        String
  createdAt DateTime @default(now())

  @@index([storyId])
  @@index([createdAt])
}
